#!/usr/bin/env perl
use FindBin;
use lib "$FindBin::Bin/../lib";
use pdd::Config;
$ENV{PDD_ENVIRONMENT} ||= 'test';
my $cfg = pdd::Config->config();
(require DBIx::Class::Migration::Script)
->run_with_options(
    dbic_connect_attrs => { on_connect_do => $cfg->{db}{on_connect_do}, },
    dsn                => $cfg->{db}{dsn},
    schema_class       => "pdd::Schema",
);
